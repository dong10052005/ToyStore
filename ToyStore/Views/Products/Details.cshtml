@model ToyStore.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Chi tiết sản phẩm</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                                <div class="text-center">
                                    <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                    <p class="text-muted">Chưa có hình ảnh</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h3 class="text-primary">@Model.ProductName</h3>
                        <p class="text-muted">@Model.Category.CategoryName</p>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <h5 class="text-success">@Model.Price.ToString("N0") ₫</h5>
                            </div>
                            <div class="col-6">
                                <span class="badge @(Model.Stock > 10 ? "bg-success" : Model.Stock > 0 ? "bg-warning" : "bg-danger") fs-6">
                                    Tồn kho: @Model.Stock
                                </span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="mb-3">
                                <h6>Mô tả:</h6>
                                <p class="text-muted">@Model.Description</p>
                            </div>
                        }

                        <div class="mb-3">
                            <h6>Trạng thái:</h6>
                            @if (Model.Status == true)
                            {
                                <span class="badge bg-success fs-6">Đang bán</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">Ngừng bán</span>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3">
                                <h6>URL hình ảnh:</h6>
                                <a href="@Model.ImageUrl" target="_blank" class="text-decoration-none">
                                    <i class="fas fa-external-link-alt"></i> Xem hình ảnh gốc
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Products" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <div>
                        <a href="/Products/Edit/@Model.ProductId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa sản phẩm
                        </a>
                        <a href="/Products/Delete/@Model.ProductId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>