@model ToyStore.Models.Admin
@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Chi tiết nhân viên</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.AdminId</dd>

                    <dt class="col-sm-3">Họ tên:</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">Username:</dt>
                    <dd class="col-sm-9">@Model.Username</dd>

                    <dt class="col-sm-3">Vai trò:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Role == "Admin" ? "bg-danger" : "bg-primary")">
                            @Model.Role
                        </span>
                    </dd>
                </dl>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.AdminId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.AdminId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




