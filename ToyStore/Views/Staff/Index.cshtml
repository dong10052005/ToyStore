@model IEnumerable<ToyStore.Models.Admin>
@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý nhân viên</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Tạo tài khoản nhân viên
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Username</th>
                            <th>Vai trò</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model)
                        {
                            <tr>
                                <td>@staff.AdminId</td>
                                <td>@staff.FullName</td>
                                <td>@staff.Username</td>
                                <td>
                                    <span class="badge @(staff.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                        @staff.Role
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@staff.AdminId" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@staff.AdminId" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@staff.AdminId" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có nhân viên nào</h5>
                <p class="text-muted">Hãy tạo tài khoản nhân viên đầu tiên</p>
                <a asp-action="Create" class="btn btn-primary">Tạo tài khoản nhân viên</a>
            </div>
        }
    </div>
</div>




